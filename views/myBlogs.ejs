<style>


#btnDelete{
  background-color: red;
  padding: 0.5em 2em;
  color: white;
  border: none;
  margin: 10px 10px;
  border-radius: 10px;
}


</style>
<body>
  <nav id="navbar">
  <div id="main-header">
    <h1>[The Waystar]</h1>
  </div>
  <div id="navs">
    <ul>
      <li><a href="/home">Home</a></li>
      <li><a href="/create-blog">Create</a></li>
      <li><a href="/myaccount">Account</a></li>
    </ul>
  </div>
</nav>

<!--  Navbar Finished -->




       <!-- The Event Data -->
<div class="blog-container">

  <% blogs.forEach(blog => { %>
    <div class="blog-card">
      <div class="blog-content">
        <p>Title: <%= blog.blogName %></p>
        <p><%= blog.blogDescription %></p>
      </div>
    <form action="/myBlogs/<%= blog._id %>" method="POST">
      <button id="btnDelete" type="submit">Delete</button>
      </form>
    </div>
  <% }) %>

</div>







</body>
</html>
